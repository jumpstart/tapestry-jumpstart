<body class="container">
	<h3>Variable Parameters (2)</h3>
	
	<div class="eg">
		<t:if test="message">
			<div class="alert alert-danger">
				${message}
			</div>
		</t:if>
		<t:if test="!message">
			<t:beandisplay object="this" include="mode,personId"/>
		</t:if>
	</div>

