<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<!-- 
		The Java code to use this persistence unit is...
		
		@PersistenceContext (unitName="jumpstart") 
		protected EntityManager em;
	-->

	<persistence-unit name="jumpstart">
	
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<!-- Map to a data source registered in JNDI. -->
		<!-- The data source and its name are set up manually through the JBoss admin console web page. -->

		<jta-data-source>java:/jboss/datasources/JumpStartDS</jta-data-source>

		<!-- Vendor extensions. -->

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<!-- Deprecated
			<property name="hibernate.transaction.manager_lookup_class"
				value="org.hibernate.transaction.JBossTransactionManagerLookup" />
			 -->
			<property name="hibernate.transaction.jta.platform"
				value="org.hibernate.service.jta.platform.internal.JBossAppServerJtaPlatform" />
		</properties>
		
	</persistence-unit>

</persistence>
